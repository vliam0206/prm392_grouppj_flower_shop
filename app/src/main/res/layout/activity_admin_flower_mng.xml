<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminFlowerMngActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flower Management"
            android:textSize="25dp"
            android:fontFamily="cursive"
            android:textColor="@color/pink"
            android:height="32sp"
            android:textStyle="bold"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/imgAddFlower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_add_circle_40"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvFlowerMng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/nothing" />
</LinearLayout>