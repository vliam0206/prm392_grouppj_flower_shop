<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_item"
    android:padding="10dp"
    tools:context=".ViewCartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageCart"
            android:layout_width="127dp"
            android:layout_height="97dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/textViewFlowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flower's Name"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/imageCart"
            android:layout_alignTop="@id/imageCart" />

        <TextView
            android:id="@+id/textViewUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price $"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/imageCart"
            android:layout_below="@id/textViewFlowerName" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Quantity: "
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_toEndOf="@id/imageCart"
            android:layout_below="@id/textViewUnitPrice"
            />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:text="1"
            android:textAlignment="center"
            android:layout_toEndOf="@id/tvQuantity"
            android:layout_below="@id/textViewUnitPrice" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
